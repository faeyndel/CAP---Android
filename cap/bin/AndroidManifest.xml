<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esgi.cap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"
        			android:required="true" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.esgi.cap.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.esgi.cap.Login"
            android:label="@string/app_name"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.esgi.cap.Cathegory"
            android:label="@string/title_activity_cathegory"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.esgi.cap.Register"
            android:label="@string/title_activity_register"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.esgi.cap.informationPopUp"
            android:label="@string/title_activity_register"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.esgi.cap.CreateChallenge"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_create_challenge" >
        </activity>
        <activity
            android:name="com.esgi.cap.DoChallenge"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_do_challenge" >
        </activity>
        <activity
            android:name="com.esgi.cap.Profil"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name="com.esgi.cap.CathegoryChallenge"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_cathegory_challenge" >
        </activity>
        <activity
            android:name="com.esgi.cap.LastChallenge"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_last_challenge" >
        </activity>
    </application>
    <application
        android:name="common.MyApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" />

</manifest>
