<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   		xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/footer_layout"
        android:background="#E6fbc57b">

       <ImageButton
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dip "
            android:layout_height="20dip"
            android:onClick="launchCat"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/categories_footer" />

        <ImageButton
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dip "
            android:layout_height="20dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:onClick="launchDoDefi"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/relever_defi_footer" />

        <ImageButton
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_width="100dip "
            android:layout_height="20dip"
            android:onClick="launchAddDefi"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/proposer_defi_footer" />

    </LinearLayout>